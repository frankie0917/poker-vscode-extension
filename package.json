{
  "name": "vs-poker",
  "displayName": "vs-poker",
  "description": "Texas Hold'em",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.58.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vs-poker.refresh"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vs-poker-sidebar-view",
          "title": "VSPoker",
          "icon": "media/spade.svg"
        }
      ]
    },
    "views": {
      "vs-poker-sidebar-view": [
        {
          "type": "webview",
          "id": "vs-poker-sidebar",
          "name": "VSPoker",
          "icon": "media/spade.svg",
          "contextualTitle": "VSPoker"
        }
      ]
    },
    "commands": [
      {
        "command": "vs-poker.refresh",
        "category": "VSPoker",
        "title": "Refresh"
      }
    ]
  },
  "scripts": {
    "build:vite": "vite build ",
    "dev": "vite",
    "dev:server": "ts-node-dev ./server/index.ts",
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "yarn run test-compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/socket.io": "^1.4.32",
    "@types/socket.io-client": "^1.4.32",
    "@types/uuid": "^8.3.1",
    "@types/vscode": "^1.58.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "prettier": "^2.3.2",
    "ts-loader": "^9.2.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.2",
    "vite": "^2.4.1",
    "vite-plugin-react-svg": "^0.2.0",
    "vscode-test": "^1.5.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  },
  "dependencies": {
    "@octokit/rest": "^18.7.1",
    "mobx": "^6.3.2",
    "mobx-react": "^7.2.0",
    "pokersolver": "^2.1.4",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "uuid": "^8.3.2"
  }
}
